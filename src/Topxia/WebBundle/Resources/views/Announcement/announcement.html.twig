{% set announcements = data('Announcement',{ count:3 }) %}
{% if announcements and not app.request.cookies.get('close_announcements_alert') %}
<div class="alert alert-success alert-notice announcements-alert" role="alert">
  <div class="container swiper-container">
    <div class="swiper-wrapper">
      {% for announcement in announcements %}
        {% if announcement.url %}
        <div class="swiper-slide">
          <a href="{{announcement.url}}" target="_blank">
          {{announcement.content|sub_text(50)}}
          </a>
        </div>
        {% else %}
        <div class="swiper-slide">
          {{announcement.content|sub_text(50)}}
        </div>
        {% endif %}
      {% endfor %}

    </div>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">Ã—</span>
    </button> 
  </div>
</div>
{% endif %}
